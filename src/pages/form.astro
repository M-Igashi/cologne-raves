---
import BaseHead from '../components/BaseHead.astro';
import EventForm from '../components/EventForm.tsx';

const canonicalURL = "https://cologne.ravers.workers.dev/form/";
---

<html lang="en" class="dark">
  <head>
    <BaseHead 
      title="Create Party JSON | Cologne Raves" 
      description="Create JSON data for Cologne electronic music events. Easy form to generate properly formatted event data."
      canonicalURL={canonicalURL}
    />
  </head>
  <body class="bg-white text-gray-900 font-sans max-w-3xl mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Create Event JSON</h1>
    <EventForm client:load />
  </body>
</html>
