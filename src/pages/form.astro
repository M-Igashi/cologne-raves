---
import BaseHead from '../components/BaseHead.astro';
import EventForm from '../components/EventForm.tsx';

const canonicalURL = "https://cologne.ravers.workers.dev/form/";
---

<html lang="en" class="dark">
  <head>
    <BaseHead 
      title="Submit Event | Cologne Raves" 
      description="Submit your party or live show to Cologne's electronic music community calendar. Easy form to create and submit events."
      canonicalURL={canonicalURL}
    />
  </head>
  <body class="bg-white text-gray-900 font-sans max-w-3xl mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Submit Events to Cologne Raves</h1>
    <EventForm client:load />
  </body>
</html>
