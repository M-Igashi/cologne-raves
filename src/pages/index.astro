---
import PartyCard from '../components/PartyCard.astro';
import { getThisWeekendParties } from '../lib/getParties';

const parties = await getThisWeekendParties();
---

<h2>This Weekend</h2>
{parties.length === 0 ? (
  <p>No parties this weekend.</p>
) : (
  <ul>
    {parties.map(party => (
      <li><PartyCard {...party} /></li>
    ))}
  </ul>
)}
