// src/components/Header.astro
---

<header style="border-bottom: 1px solid #ffffff; padding-bottom: 24px; margin-bottom: 32px;">
  <div>
    <h1 style="font-size: 1.5rem; font-weight: 700; text-transform: uppercase; letter-spacing: 4px; margin-bottom: 4px;">Cologne Raves</h1>
    <p style="font-size: 0.75rem; color: #888888; text-transform: uppercase; letter-spacing: 2px; margin: 0;">Your weekly guide to Cologne's electronic music scene</p>
  </div>

  <div style="display: flex; gap: 12px; margin-top: 20px; flex-wrap: wrap;">
    {/* Primary CTA - Submit Event Form */}
    <a
      href="https://cologne.ravers.workers.dev/form/"
      target="_blank"
      style="display: inline-flex; align-items: center; gap: 8px; padding: 12px 24px; background: #ffffff; color: #000000; text-decoration: none; font-weight: 700; font-size: 0.75rem; text-transform: uppercase; letter-spacing: 2px; border: 1px solid #ffffff; font-family: 'JetBrains Mono', monospace;"
    >
      <svg style="width: 16px; height: 16px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Submit Event
    </a>

    {/* Secondary - GitHub Link */}
    <a
      href="https://github.com/M-Igashi/cologne-raves"
      target="_blank"
      style="display: inline-flex; align-items: center; gap: 8px; padding: 12px 24px; background: transparent; color: #ffffff; text-decoration: none; font-weight: 700; font-size: 0.75rem; text-transform: uppercase; letter-spacing: 2px; border: 1px solid #ffffff; font-family: 'JetBrains Mono', monospace;"
    >
      <svg style="width: 16px; height: 16px;" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 .5C5.37.5 0 5.87 0 12.5c0 5.28 3.438 9.755 8.207 11.338.6.11.793-.26.793-.577v-2.234c-3.338.725-4.033-1.612-4.033-1.612-.546-1.385-1.333-1.753-1.333-1.753-1.089-.745.083-.73.083-.73 1.204.084 1.837 1.236 1.837 1.236 1.07 1.834 2.807 1.304 3.492.997.108-.775.418-1.305.76-1.605-2.665-.305-5.466-1.332-5.466-5.932 0-1.31.468-2.38 1.236-3.22-.124-.303-.536-1.527.117-3.176 0 0 1.008-.322 3.3 1.23a11.48 11.48 0 0 1 6 0c2.29-1.552 3.297-1.23 3.297-1.23.654 1.649.242 2.873.12 3.176.77.84 1.236 1.91 1.236 3.22 0 4.61-2.804 5.624-5.475 5.92.43.37.813 1.096.813 2.21v3.277c0 .32.192.694.8.576C20.565 22.252 24 17.78 24 12.5 24 5.87 18.63.5 12 .5z"></path>
